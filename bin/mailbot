#!/usr/bin/env ruby

$LOAD_PATH << File.expand_path('../../lib', __FILE__)

File.open('tmp/mailbot.pid', 'w') do |file|
  file.write(Process.pid.to_s + "\n")
end

require 'mailbot'

Mailbot.configure do |config|
  config.twitch_api_token = ENV['TWITCH_CHAT_TOKEN']
end

Mailbot.start

puts 'Exited.'
